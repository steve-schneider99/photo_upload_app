<!DOCTYPE html>
<html>
<head>
  <title>TwinklPhotoSharing</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <link href='http://fonts.googleapis.com/css?family=Montserrat:400,700' rel='stylesheet' type='text/css'>
  <%= csrf_meta_tags %>
</head>
<body>
  <div id='container'>
    <div id="user_nav">
      <%= link_to "Twinkl", root_path %> |
      <%= link_to "Pictures", picture_lists_path %>
      <% flash.each do |name, msg| %>
        <%= content_tag :span, msg, id: "flash_#{name}", class: "flash" %>
      <% end %>

      <span class="pull-right">
        <% if user_signed_in? %>
          Logged in as <strong><%= link_to current_user.email, edit_user_registration_path %></strong> |
          <%= link_to 'My Pictures', user_pictures_path %> |
          <%= link_to 'Logout', destroy_user_session_path, method: :delete %>
        <% else %>
          <%= link_to 'Sign Up', new_user_registration_path %> |
          <%= link_to 'Login', new_user_session_path %>
        <% end %>
      </span>
    </div>

    <%= yield %>

  </div>
</body>
</html>
